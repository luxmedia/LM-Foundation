	div[class*=products] li.item:hover .desc 		{ color:#000; }
	div[class*=products] li.item:hover .regular-price .price,
	div[class*=products] li.item:hover .old-price .price			{  }


	/* View Type: Grid */
	.products-grid							{ position: relative; padding:0;}
	.products-grid li.item					{ float:left; min-width:175px!Important; position:relative; overflow:hidden; padding:0; margin:0; text-align:center;  min-height:235px; height:auto!Important; height:235px; }
