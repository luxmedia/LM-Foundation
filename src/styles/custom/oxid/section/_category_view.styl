/* Category Page ========================================================================= */
	.category-title 					{ border:0; margin:0; }
	img.cat-img 						{ float:left; border:1px solid rgba(0,0,0,0.3); box-shadow: 2px 2px 20px rgba(0,0,0,0.3); }
	.category-description img.cat-img 	{ margin:0 40px 0 0; }
	.category-description 				{ margin:0 0 10px 0; padding:0; font-size:(1.1); text-align:justify; }
	.category-description,
	.shortdesc,
	p									{ hyphenate:auto; }

	.col-main .block 					{ background:none; }
	.col-main .category-block 			{ padding-bottom:20px; margin-bottom:20px; border-bottom:2px solid #aaa; }
	.col-main .block ul					{ list-style:disc; margin-left:30px; }
