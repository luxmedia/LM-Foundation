	.subcat-list .item ul 				{ padding: 10px; margin:0; }
	.subcat-list .item ul li 			{ display:block; float:none; fontCondensed() }
	.subcat-list .item ul li a			{ display:block; padding:3px; font-weight:normal; color:$gray-dark-1; border-top:1px solid rgba(0,0,0,0.1); }
