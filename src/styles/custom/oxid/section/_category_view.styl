	.col2-left-layout .products-grid,
	.col2-right-layout .products-grid 		{ margin:0 auto; }
	.col1-layout .products-grid 			{ margin:0 auto; }
/* --- Grid View ------------------------------------ */
	.gridView,
	.infogridView 									{ margin: 0; margin-bottom: 20px; }
	.gridView {
		li 									{ 
			col(1/4, cycle: 4); 
			@media $medium-only { col(1/2, uncycle: 4, cycle: 2); }
			@media $small-only { col(1, uncycle: 4, cycle: 0); }

			height: 230px; overflow: hidden; position: relative; list-style: none; padding: 0; list-style: none; background: #ebeae8;
			
			a.titleBlock 						{ 
				padding: 5px 10px; color: #111; line-height: 15px; text-decoration: none; font-weight: bold; display: block; 
				&:hover 						{ 
					color: $brand-primary; 
					.gridPicture img 	{ opacity:0.6; }
				}
				span 					{ display:block; height:36px; }	
				.gridPicture 			{ display: block; margin: 0; padding:0; height: 150px; text-align: center; background:#fff; }
				.gridPicture img 		{  }
			}
			.priceBlock 						{ 
				height: 30px; padding: 5px 10px; font-size: 1.2em; 
				.priceOld 				{ color:#111; }
				.pricePerUnit 			{ font-size: 0.85em; line-height: 1em; display: block; }
				a.toCart 				{ display:none; font-size: 1em; font-weight: bold; text-transform: uppercase; }
			}
		}
	}	

	.titleBox 										{ }
	.titleBox a 									{ display: block; padding: 10px; font-size: 1.2em; font-weight: bold; }

	.priceBox 										{ padding: 10px; text-align: right; }
	.priceBox strong 								{ font-size: 1.2em; padding-right: 5px; color:$brand-primary; }
	.priceBlock 									{ text-align:right; }
	.priceBlock strong								{ color:$brand-primary; }


