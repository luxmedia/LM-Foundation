$small-font-size =                  0.8rem

$button-font-tny =                  0.9rem // rem-calc(11)
$button-font-sml =                  1rem // rem-calc(13)
$button-font-med =                  1.1rem // rem-calc(16)
$button-font-lrg =                  1.2rem // rem-calc(20)

// build padding for buttons.
$button-tny =                       rem-calc(2) // rem-calc(10)
$button-sml =                       rem-calc(4) // rem-calc(14)
$button-med =                       rem-calc(6) // rem-calc(16)
$button-lrg =                       rem-calc(8) // rem-calc(18)

