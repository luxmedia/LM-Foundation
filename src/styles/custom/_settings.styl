// This is the default html and body font-size for the base rem value.
$rem-base =                         13px

@require "../_global/lm_foundation/_functions"

// =========================================================================
//  0-a - GLOBAL Variables
// Look for more variables in the components stylesheet
// =========================================================================

// =========================================================================
// Folders
// =========================================================================
// Define your relativbe paths here

$dir_themebase =                    "../../.."
$dir_img =                          $dir_themebase+"/src/img"
$dir_js =                           $dir_themebase+"/src/js"
$dir_font =                         $dir_themebase+"/src/fonts"

// =========================================================================
// Grid system (based on jeet.gs)
// =========================================================================
// jeet overrides - requires jeet to be imported before!
jeet.gutter =                       2
jeet.max-width =                    rem-calc(1170)



// header font sizes
$h1-font-size =                     1.8rem // rem-calc(44)
$h2-font-size =                     1.4 // rem-calc(37)
$h3-font-size =                     1.2rem // rem-calc(27)
$h4-font-size =                     1.1rem // rem-calc(23)
$h5-font-size =                     1rem // rem-calc(18)
$h6-font-size =                     1rem

$button-font-tny =                  0.9rem // rem-calc(11)
$button-font-sml =                  1rem // rem-calc(13)
$button-font-med =                  1.1rem // rem-calc(16)
$button-font-lrg =                  1.2rem // rem-calc(20)

// build padding for buttons.
$button-tny =                       rem-calc(2) // rem-calc(10)
$button-sml =                       rem-calc(4) // rem-calc(14)
$button-med =                       rem-calc(6) // rem-calc(16)
$button-lrg =                       rem-calc(8) // rem-calc(18)

