// +exports("tab") {
    if $include-html-tabs-classes {
        .tabs,
        .tabs-list {
            clearfix()
            margin-bottom: 0 !important
            margin-left: 0
            dd,
            .tab-title {
                position: relative
                margin-bottom: 0 !important
                margin-right: 1px
                list-style: none
                float: $default-float
                & > a {
                    outline: none
                    display: block
                    background-color: $tabs-navigation-bg-color
                    color: $tabs-navigation-font-color
                    padding: $tabs-navigation-padding ($tabs-navigation-padding * 2.5)
                    font-family: $tabs-navigation-font-family
                    fontSize($tabs-navigation-font-size)
                    font-weight: $tabs-navigation-font-weight
                    text-transform: $tabs-navigation-text-transform
                    border-top:2px solid transparent
                    &:hover {
                        background-color: $tabs-navigation-hover-bg-color
                        font-color: $tabs-navigation-hover-font-color
                    }
                }
                &.is-active a {
                    background-color: $tabs-navigation-active-bg-color
                    color: $tabs-navigation-active-font-color
                    border-top-color: $primary-color
                }
            }
            &.tabs--radius {
                dd:first-child,
                .tab:first-child {
                    a {
                        side-radius($default-float, $global-radius)
                    }
                }
                dd:last-child,
                .tab:last-child {
                    a {
                        side-radius($opposite-direction, $global-radius)
                    }
                }
            }
            &.tabs--vertical {
                dd,
                .tab-title {
                    position: inherit
                    float: none
                    display: block
                    top: auto
                }
            }
        }

        .tabs-content {
            clearfix()
            margin-bottom: $tabs-content-margin-bottom
            width: 100%
            & > .content {
                display: none
                float: $default-float
                padding: $tabs-content-padding 0
                width: 100%
                border-bottom: 1px solid $gray-light-2
                &.is-active {
                    display: block
                    float: none
                }
                &.contained {
                    padding: $tabs-content-padding
                }
            }
            &.tabs-content--vertical {
                display: block
                > .content {
                    padding: 0 $tabs-content-padding
                }
            }
        }
        @media $medium-up {
            .tabs {
                &.tabs--vertical {
                    width: 20%
                    max-width: 20%
                    float: $default-float
                    margin: 0 0 $tabs-vertical-navigation-margin-bottom
                }
            }
            .tabs-content {
                &.tabs-content--vertical {
                    width: 80%
                    max-width: 80%
                    float: $default-float
                    margin-{$default-float}: -1px
                    padding-{$default-float}: 1rem
                }
            }
        }
        .no-js {
            .tabs-content > .content {
                display: block
                float: none
            }
        }
    }
// }