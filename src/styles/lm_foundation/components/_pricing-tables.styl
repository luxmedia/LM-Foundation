@require '_global'

//
// @variables
//

$include-html-pricing-classes =             com_css.PRICINGTABLES

// the border color
$price-table-border ?=                       solid 1px $gray-medium-1

// the bottom margin of the pricing table
$price-table-margin-bottom ?=                rem-calc(20)

// the title styles
$price-title-bg ?=                           $charcoal-1
$price-title-padding ?=                      rem-calc(15 20)
$price-title-align ?=                        center
$price-title-color ?=                        $gray-light-3
$price-title-weight ?=                       $font-weight-normal
$price-title-size ?=                         rem-calc(16)
$price-title-font-family ?=                  $body-font-family

// the price styles
$price-money-bg ?=                           $gray-lighter-3  
$price-money-padding ?=                      rem-calc(15 20)
$price-money-align ?=                        center
$price-money-color ?=                        $charcoal-1
$price-money-weight ?=                       $font-weight-normal
$price-money-size ?=                         rem-calc(32)
$price-money-font-family ?=                  $font-family-headings

// the description styles
$price-bg ?=                                 $white
$price-desc-color ?=                         $gray-dark-3
$price-desc-padding ?=                       rem-calc(15)
$price-desc-align ?=                         center
$price-desc-font-size ?=                     rem-calc(12)
$price-desc-weight ?=                        $font-weight-normal
$price-desc-line-height ?=                   1.4
$price-desc-bottom-border ?=                 dotted 1px $gray-medium-1

// the list item styles
$price-item-color ?=                         $charcoal-1
$price-item-padding ?=                       rem-calc(15)
$price-item-align ?=                         center
$price-item-font-size ?=                     fontsize(1.5rem)
$price-item-weight ?=                        $font-weight-normal
$price-item-bottom-border ?=                 dotted 1px $gray-medium-1

// the CTA area styles
$price-cta-bg ?=                             $white
$price-cta-align ?=                          center
$price-cta-padding ?=                        rem-calc(20 20 0)

// Specific prices
$price-line-height ?=                       1.3
$price-old-font-family ?=                   $font-family-custom
$price-old-font-size ?=                     fontsize(0.8rem)
$price-old-font-weight ?=                   $font-weight-bold
$price-old-color ?=                         $gray-darker-2
$price-old-decoration ?=                    line-through
$price-base-font-family ?=                  $body-font-family
$price-base-font-weight ?=                  $font-weight-normal
$price-base-color ?=                        $font-color-caption
$price-base-color-alt ?=                    $gray-darker-2
$price-final-font-family ?=                 $font-family-custom
$price-final-font-size ?=                   fontsize(1.5rem)
$price-final-font-weight ?=                 $font-weight-bold
$price-final-color ?=                       $primary-color
$price-final-decoration ?=                  none
$price-special-font-family ?=               $price-final-font-family
$price-special-font-size ?=                 $price-final-font-size
$price-special-font-weight ?=               $price-final-font-weight
$price-special-color ?=                     $price-final-color
$price-minimal-font-size ?=                 $price-special-font-size
$price-label-font-weight ?=                 $font-weight-normal
$price-label-font-size ?=                   fontsize(0.8rem) // scale factor based on related price
$price-label-text-transform ?=              uppercase

// @mixins
//
// create the container element for the pricing tables
pricing-table-container() {
    border: $price-table-border
    margin-bottom: $price-table-margin-bottom
    margin-{$default-float}: 0

    & * {
        line-height: 1
        list-style: none
    }
}
// @mixins
//
// create the pricing table title styles
pricing-table-title() {
    background-color: $price-title-bg
    color: $price-title-color
    font-size: $price-title-size
    fontweight($price-title-weight)
    font_family($price-title-font-family)
    padding: $price-title-padding
    text-align: $price-title-align
}

// @mixins
//
// control the pricing table price styles
pricing-table-price() {
    background-color: $price-money-bg
    color: $price-money-color
    font-size: $price-money-size
    fontweight($price-money-weight)
    font_family($price-money-font-family)
    padding: $price-money-padding
    text-align: $price-money-align
}

// @mixins
//
// create the description styles for the pricing table
pricing-table-description() {
    background-color: $price-bg
    border-bottom: $price-desc-bottom-border
    color: $price-desc-color
    font-size: $price-desc-font-size
    fontweight($price-desc-weight)
    line-height: $price-desc-line-height
    padding: $price-desc-padding
    text-align: $price-desc-align
}

// @mixins
//
// style the bullet items in the pricing table
pricing-table-bullet() {
    background-color: $price-bg
    border-bottom: $price-item-bottom-border
    color: $price-item-color
    font-size: $price-item-font-size
    fontweight($price-item-weight)
    padding: $price-item-padding
    text-align: $price-item-align
}

// @mixins
//
// style the CTA area of the pricing tables
pricing-table-cta() {
    background-color: $price-cta-bg
    padding: $price-cta-padding
    text-align: $price-cta-align
}

//
// @styles
//

if $include-html-pricing-classes {

    /* Pricing Tables */
    .pricing-table {
        pricing-table-container()

        .title {
            pricing-table-title()
        }
        .price {
            pricing-table-price()
        }
        .description {
            pricing-table-description()
        }
        .bullet-item {
            pricing-table-bullet()
        }
        .cta-button {
            pricing-table-cta()
        }
    }

    // Price base formats
    .price {
        fontweight($price-final-font-weight)
        font_family($price-final-font-family)
        margin: 0
        text-decoration: $price-final-decoration

        &--special {
            if ($price-special-font-family != $price-final-font-family) {
                font_family($price-special-font-family)
            }
        }

        &--final {
            font-size: $price-final-font-size
        }

        &--old {
            if ($price-old-font-family != $price-final-font-family) {
                font_family($price-old-font-family)
            }
            font-size: $price-old-font-size
            fontweight($price-old-font-weight)
            text-decoration: $price-old-decoration
        }

        &--base {
            color: $price-base-color
            font-size: ($price-old-font-size - 0.1)
            fontweight($price-base-font-weight)
            if ($price-base-font-family != $price-final-font-family) {
                font_family($price-base-font-family)
            }
            letter-spacing: 0
        }
        // Price labels (e.g. uvp, from)
        &__label {
            font-size: $price-label-font-size // Fallback font size
            fontweight($price-label-font-weight)
            margin-{$opposite-direction}: rem-calc(4)
            text-transform: $price-label-text-transform
            
            &--uvp { }
            &--special,
            &--minimal { }
        }
    }

    // Price-Boxes and styles
    .price-box {
        text-align: $opposite-direction
        font-size: $price-item-font-size

        .price {
            color: $price-final-color
            display: block
            
            line-height: $price-line-height

            &--total {
                font-size: $price-final-font-size
            }
            &--minimal {
            }
            if ($price-final-font-size != $price-item-font-size) {
                &--final {
                    font-size: $price-final-font-size
                }
            }
            &--special {
                if ($price-special-color != $price-final-color) {
                    color: $price-special-color
                }
                if ($price-special-font-size != $price-item-font-size) {
                    font-size: $price-special-font-size
                }
            }

            &--old {
                color: $price-old-color
            }

            &--base {
                color: $price-base-color-alt
            }

        }
    }
}