@require '_global'

//
// @variables
//

$include-html-media-thumbs-classes =         com_css.THUMBS

// border styles
$thumb-border-style ?=                       solid
$thumb-border-width ?=                       4px
$thumb-border-color ?=                       $white
$thumb-border-color-hover ?=                 $primary-color

// Radius and transition speed for thumbs
$thumb-radius ?=                             $global-radius
$thumb-transition-speed ?=                   300ms


//
// @mixins
//

// We use this to create image thumbnail styles.
//
// $border-width - Width of border around thumbnail. Default: $thumb-border-width.
// $box-shadow - Box shadow to apply to thumbnail. Default: $thumb-box-shadow.
// $box-shadow-hover - Box shadow to apply on hover. Default: $thumb-box-shadow-hover.
thumb($border-width = $thumb-border-width, $box-shadow = true, $box-shadow-hover = $thumb-box-shadow-hover) {
    border: $thumb-border-style $border-width $thumb-border-color
    display: inline-block
    line-height: 0
    max-width: 100%

    &:hover,
    &:focus {
        border-color: $thumb-border-color-hover
    }
    if $box-shadow {
        shadow-elevation(card)
    }
}


//
// @styles
//
if $include-html-media-thumbs-classes {

    /* Image Thumbnails */
    .th {
        thumb()
        single-transition(all, $thumb-transition-speed,ease-out)

        &--rad {
            radius($thumb-radius)
        }
    }
}