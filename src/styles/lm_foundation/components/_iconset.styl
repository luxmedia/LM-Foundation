@require '_global'

//
// @name
// @dependencies _global.styl
//

//
// @vars
//
$include-html-icons-classes ?=              com_css.ICONS


$ico-font-size-med ?=                   fontsize(2rem)
$ico-font-size-tny ?=                   fontsize(1.2rem)
$ico-font-size-sml ?=                   fontsize(1.6rem)
$ico-font-size-lrg ?=                   fontsize(2.4rem)
$ico-font-size-xlrg ?=                  fontsize(2.8rem)
$ico-width-med ?=                       rem-calc(38)
$ico-margin-med ?=                     rem-calc(5 10)
$ico-margin-sml ?=                     rem-calc(3 5)
$ico-margin-tny ?=                     rem-calc(2 4)

$ico-side-margin ?=                     rem-calc(10)

$icon-color-gray ?=                     $icon-color-normal

//
// @import autogenerated icon.styl
//
if $include-html-icons-classes {
    @require 'icons'
}

//
// @mixins
//
ico-base() {
    // Base styling
    font-size: $ico-font-size-med
    fontweight($font-weight-bold)
    position: relative
    // top: 1px
    // text-align: center
    // width: $ico-width-med
    // overflow: hidden

    &--left {
        margin-{$opposite-direction}: $ico-side-margin
    }

    &--right {
        margin-{$default-float}: $ico-side-margin
    }

    &--center {
        margin-{$default-float}: $ico-side-margin
        margin-{$opposite-direction}: $ico-side-margin
    }

}

ico-size($fontsize = $ico-font-size-med) {
    // if ($height != $ico-height-med) {
    //     height: $height
    //     line-height: $height
    // }
    if ($fontsize != $ico-font-size-med) {
        font-size: $fontsize
    }
}

ico-style($color = $icon-color-normal, $bg = false, $shadow = false) {
    color: $color
    if $bg {
        background: $bg
    }
    if $shadow {
        text-shadow: $shadow
    }
}

//
// @styles
//
if $include-html-icons-classes {
    .i {
        ico-base()

        // Size variants
        &--tny {
            ico-size($ico-font-size-tny)
        }
        &--sml {
            ico-size($ico-font-size-sml)
        }
        &--lrg {
            ico-size($ico-font-size-lrg)
        }
        &--xlrg {
            ico-size($ico-font-size-xlrg)
        }

        // Shape variants
        &--rad {
            radius($global-rounded)
        }
        &--rnd {
            radius($global-rounded)
        }

        // Color variants
        &--primary {
            ico-style($primary-color)
        }
        &--primary-2 {
            ico-style($primary-color-2)
        }
        &--secondary {
            ico-style($secondary-color)
        }
        &--info {
            ico-style($info-color)
        }
        &--success {
            ico-style($success-color)
        }
        &--alert {
            ico-style($alert-color)
        }
        &--warning {
            ico-style($warning-color)
        }
        &--white {
            ico-style($white)   
        }
    }
}